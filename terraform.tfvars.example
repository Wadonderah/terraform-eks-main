# Example Terraform variables file
# Copy this file to terraform.tfvars and update with your values
# terraform.tfvars is ignored by git for security

# AWS Configuration
tf_region = "ca-central-1"
tf_profile = "default"  # Use AWS CLI profile instead of hardcoded credentials

# Invoice Processing Configuration
notification_email = "your-email@domain.com"
raw_invoice_bucket_name = "your-invoice-uploads-bucket"
processed_invoice_bucket_name = "your-processed-invoices-bucket"

# EKS Configuration (if using EKS modules)
eks_cluster_name = "your-eks-cluster"
eks_version = "1.31"

# IMPORTANT: Never commit terraform.tfvars to version control
# Use AWS CLI profiles or IAM roles instead of access keys
# Run: aws configure --profile your-profile-name
